echo -e "   âœ”ï¸  \e[3;38;5;250m$HOME/Builds/servicebus-cli-0.2.2/servicebus-cli-linux-x64-0.2.2\e[0m"
export PATH="$PATH:$HOME/Builds/servicebus-cli-0.2.2/servicebus-cli-linux-x64-0.2.2"

#################################
# ADDING USER DEFINED FUNCTIONS #
#################################
echo -e "âš™ï¸  \e[1mLoading user defined functions\e[0m"
echo -e "   âœ”ï¸  \e[3;38;5;250mfind_code_repo (fcr)\e[0m"
source /home/erik-wenzel/Source/Misc/Bash/find-code-repo.sh
echo -e "   âœ”ï¸  \e[3;38;5;250mget_vehicle_cache_record (gvcr)\e[0m"
source /home/erik-wenzel/Source/Misc/Bash/get-vehicle-cache-record.sh